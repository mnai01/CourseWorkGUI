<Window x:Class="Matlak_Hw4_Main_CSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Matlak_Hw4_Main_CSharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Open Course Work JSON File" HorizontalAlignment="Left" Margin="31,48,0,0" VerticalAlignment="Top" Width="196" Click="Button_Click"/>
        <Label Content="Course Work Filename" HorizontalAlignment="Left" Margin="31,21,0,0" VerticalAlignment="Top" Width="113" FontSize="10"/>
        <TextBox x:Name="courseWorkTB" HorizontalAlignment="Left" Height="23" Margin="149,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="622" TextChanged="TextBox_TextChanged" IsReadOnly="True"/>
        <Label Content="Course Name" HorizontalAlignment="Left" Margin="31,80,0,0" VerticalAlignment="Top" FontSize="10"/>
        <TextBox x:Name="courseNameTB" HorizontalAlignment="Left" Height="23" Margin="118,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="622" TextChanged="TextBox_TextChanged" IsReadOnly="True"/>

    </Grid>
</Window>
